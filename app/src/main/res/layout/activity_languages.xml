<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LanguagesActivity">

    <EditText
        android:id="@+id/etNombreCursoLenguaje"
        android:hint="Nombre Curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGuardarLenguaje"
        android:text="Guardar Lenguaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnConsultarLenguajes"
        android:text="Consultar Lenguaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnActualizarLenguaje"
        android:text="Actualizar Lenguaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnBorrarLenguaje"
        android:text="Borrar Lenguaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>